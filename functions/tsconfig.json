{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "rootDir": "src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
