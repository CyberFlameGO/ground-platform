// For more info: 
// https://github.com/google/eslint-config-google
// https://www.npmjs.com/package/eslint-plugin-angular

{
  "plugins": ["angular", "jasmine"],
  "extends": ["plugin:jasmine/recommended", "eslint:recommended", "strongloop", "google"],
  "rules": {
    "require-jsdoc": "off",
    "max-len": "off",
    "semi": ["error", "always"],
    "angular/on-watch": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "env": {
    "jasmine": true
  }
}